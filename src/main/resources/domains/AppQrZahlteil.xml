<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="AppQrZahlteil" lang="java">

    <one-to-one ref="com.axelor.apps.base.db.App" name="app"/>

    <string name="apiKey" max="32"/>
    <string name="encryptionKey" max="32"/>
    <string name="initializationVector" max="16"/>
    <enum name="imageFormat" ref="com.axelor.apps.base.db.QrZahlteilImageFormat"/>
    <boolean name="acceptPayslip" default="true"/>
    <boolean name="encryptCommunication" default="true"/>
    <string name="identificationkey" />

    <extra-code>
   		<![CDATA[
            // STATUS
			public static final String QR_ZAHLTEIL_WEBSOCKET_URI = "wss://qrzahlteil.ch/api1/";
   		]]>
    </extra-code>

    <track>
      <field name="apiKey"/>
      <field name="encryptionKey"/>
      <field name="initializationVector"/>
      <field name="acceptPayslip"/>
      <field name="encryptCommunication"/>
      <field name="identificationkey"/>
    </track>
  </entity>

  <enum name="QrZahlteilImageFormat" numeric="true">
    <item name="NO_PICTURES" value="0"/>
    <item name="SEPARATE_IMAGES" value="1"/>
    <item name="PDF" value="2"/>
  </enum>

</domain-models>
